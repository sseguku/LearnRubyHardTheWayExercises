<h1> Edit Post </h1>
<%# #submits to create method url: posts_url
 %>
 <br>
 <%= form_for :post, url: post_url, method: :patch do |f| %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
            <div class = "alert alert-danger">
            <%= msg %>
            </div>
        <% end %>
    <% end %>
    
    <p>
        <%= f.label :title %><br>
        <%= f.text_field(:body, {:class => 'form-control'})%>
    </p>

    <p>
        <%= f.label :body %><br>
        <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.submit ({:class => 'btn btn-primary'})%>
    </p>
<% end %>